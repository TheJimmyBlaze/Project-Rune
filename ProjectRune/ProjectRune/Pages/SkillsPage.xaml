<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ProjectRune.ViewModels"
             xmlns:views="clr-namespace:ProjectRune.Views"
             x:Class="ProjectRune.Pages.SkillsPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="{StaticResource MidBrown}"
                     Spacing="0">

            <views:QuickMenuView x:Name="QuickMenu"/>

            <views:SkillsSummaryView>
                <views:SkillsSummaryView.Style>
                    <Style TargetType="views:SkillsSummaryView">
                        <Setter Property="IsVisible" Value="False"/>
                        <Style.Triggers>
                            <DataTrigger TargetType="views:SkillsSummaryView" 
                                         Binding="{Binding ActiveMenuButton, Source={x:Reference QuickMenu}}" 
                                         Value="{x:Static viewModels:QuickMenuViewModel+QuickMenuButtons.Skills}">
                                <Setter Property="IsVisible" Value="True"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </views:SkillsSummaryView.Style>
            </views:SkillsSummaryView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>