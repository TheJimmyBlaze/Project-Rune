<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ProjectRune.ViewModels"
             xmlns:views="clr-namespace:ProjectRune.Views"
             x:Class="ProjectRune.Pages.MainPage">
    <ContentPage.Content>
        <Grid BackgroundColor="{StaticResource MidPrimary}">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <views:SkillsSummaryView VerticalOptions="Start"/>

            <views:InventoryView VerticalOptions="Start"/>

            <views:QuickMenuView Grid.Row="1"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>